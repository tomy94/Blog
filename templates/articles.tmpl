{{ range . }}
	<div class="row">
		<div class="col-md-10 col-sm-9">
			<h3>{{ .Title }}</h3>
			<div class="row">
				<div class="col-xs-9">
					<p>Author: {{ .Author }}</p>
					<p>{{ .Body }}</p>
				</div>
				{{ if .Bool }} 
					<a href="/edit/{{ .Id }}"><button>Full article</button></a>
				{{else}} {{end}}
			</div>
		</div>
	</div>
	<hr>
{{ end }}