{{ if .}}
	{{ range . }}
		<div class="row">
			<div class="col-md-10 col-sm-9">
				<h3>{{ .Title }}</h3>
				<div class="row">
					<div class="col-xs-9">
						<p>Author: {{ .Author }}</p>
						<p>{{ .Body }}</p>
					</div>
				</div>
				<div class="row">
					<i class="glyphicon glyphicon-comment"></i>
				</div>
				<div class="row">
					<a href="/open/{{ .Id }}" class="btn btn-xs btn-primary">Full article</a>	
				</div>
				
			</div>
		</div>
		<hr>
	{{end}}	
	
{{ else }}
	<br>
	<h2>No articles.. <a href="/create">Click here to create</a></h2>
{{ end }}