{{ range . }}
	<div class="row">
		<div class="col-md-10 col-sm-9">
			<h3>{{ .Title }}</h3>
			<div class="row">
				<div class="col-xs-9">
					<p>Author: {{ .Author }}</p>
					<p>{{ .Body }}</p>
				</div>
			</div>
			<a href="/open/{{ .Id }}"><button>Full article</button></a>
		</div>
	</div>
	<hr>
{{ else }}
	<br>
	<h2>No articles.. <a href="/create">Click here to create</a></h2>
{{ end }}